<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
        "http://www.w3.org/TR/html4/strict.dtd">
<HTML>
	<head>
		<title>Documentation</title>
		<meta charset="UTF-8"/>
		<style type="text/CSS">
			body{
				font-family:STIX,serif;
			}
			#content > *{
				margin-left:2ex;
			}
			h1,h2,h3,h4,h5{
				margin-left:0ex!important;
				margin-top:2ex;
				margin-bottom:0ex;
			}
			*:target{
				color:darkred;
			}
			pre{
				white-space: pre-wrap;
			}
			img{
				max-width:100%;
			}
			p.img{
				text-align:center;
			}
			#grid{
				display: grid;
			}
			@media only screen and (min-width: 102ex){
				#grid{
					grid-template-columns:30ex minmax(70ex,120ex);
					grid-gap:2ex;
					grid-auto-rows:minmax(100px,auto);
				}
				#navbar{
					grid-column:1/2;
					grid-row:1/1;
				}
				#content{
					grid-column:2/2;
					grid-row:1/1;
				}
			}
			@media only screen and (max-width: 102ex){
				#grid{
					grid-auto-rows:minmax(100px,auto);
				}
				#navbar{
					grid-column:1/1;
					grid-row:1/2;
				}
				#content{
					grid-column:1/1;
					grid-row:2/2;
				}
			}
			#navbar ul{
				padding-left:2ex;
				list-style-type:none;
			}
			#navbar > ul{
				padding-left:0px;
			}
		</style>
	</head>
	<body>
	<div id="grid">
	<div id="navbar">
	</div>
	<div id="content">
